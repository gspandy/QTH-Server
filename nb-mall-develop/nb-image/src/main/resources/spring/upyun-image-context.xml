<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- 又拍云服务 -->
    <bean id="imageServer" class="com.nowbook.image.yupoo.UpYun" >
        <constructor-arg index="0" value="#{app.imageFolder}"/>
        <constructor-arg index="1" value="#{app.imageOperator}" />
        <constructor-arg index="2" value="#{app.imageUploadPassword}" />
    </bean>


</beans>