<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <property resource="app.properties"/>
    <appender name="RootLogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logRoot}/root.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logRoot}/root-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="ImageLogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logRoot}/image.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logRoot}/image-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>

        </rollingPolicy>
    </appender>

    <appender name="CategoryLogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logRoot}/category.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logRoot}/category-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="SiteLogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logRoot}/site.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logRoot}/site-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>

        </rollingPolicy>
    </appender>

    <appender name="SearchLogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logRoot}/search.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logRoot}/search-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="WebLogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logRoot}/web.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logRoot}/web-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="NotifyFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logRoot}/notify.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logRoot}/notify-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="SmsLogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logRoot}/sms.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logRoot}/sms-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>

        </rollingPolicy>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoder defaults to ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>
            <pattern>%-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <!-- Only log level INFO and above -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${logLevel}</level>
        </filter>
    </appender>

    <logger name="com.nowbook.image" level="${logLevel}" additivity="${logAdditivity}">
        <appender-ref ref="ImageLogFile"/>
    </logger>

    <logger name="com.nowbook.category" level="${logLevel}" additivity="${logAdditivity}">
        <appender-ref ref="CategoryLogFile"/>
    </logger>

    <logger name="com.nowbook.site" level="${logLevel}" additivity="${logAdditivity}">
        <appender-ref ref="SiteLogFile"/>
    </logger>

    <logger name="com.nowbook.search" level="${logLevel}" additivity="${logAdditivity}">
        <appender-ref ref="SearchLogFile"/>
    </logger>

    <logger name="com.nowbook.web" level="${logLevel}" additivity="${logAdditivity}">
        <appender-ref ref="WebLogFile"/>
    </logger>

    <logger name="com.nowbook.web.controller.api.Alipays" level="debug">
        <appender-ref ref="NotifyFile"/>
    </logger>

    <logger name="com.nowbook.sms" level="debug" additivity="${logAdditivity}">
        <appender-ref ref="SmsLogFile"/>
    </logger>

    <!-- Strictly speaking, the level attribute is not necessary since -->
    <!-- the level of the root level is set to DEBUG by default.       -->
    <root level="${logLevel}">
        <appender-ref ref="${logDefaultFile}"/>
    </root>

</configuration>